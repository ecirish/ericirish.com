{
  "name": "photography.ericirish.com",
  "version": "0.0.01",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "browser-sync start --server \"dist\" --extensions \"html\" --serveStatic dist --logLevel \"silent\" --files dist --reload-delay 1000 --no-open --no-ghost-mode --no-notify --reload-debounce",
    "clean:site": "rm -rf dist",
    "sass:dev": "node-sass --output-style expanded --source-map=true frontend/styles/app.scss frontend/app.css",
    "sass:prod": "node-sass --output-style compressed --source-map=false frontend/styles/app.scss frontend/app.css",
    "sass:lint": "sass-lint --config .sass-lint.yml 'frontend/styles/**/*.scss'",
    "pug:lint": "pug-lint frontend",
    "accessibility": "a11y dist/**/*.html",
    "build:minify-html": "html-minifier --input-dir dist --output-dir dist",
    "build:cssdev": "yarn sass:dev",
    "build:cssprod": "yarn sass:prod",
    "build:images": "cp -p -a frontend/images/. dist/images",
    "build:pug": "pug --out dist --pretty -b frontend frontend",
    "build:pug-prod": "pug --out dist --pretty -b frontend/templates frontend/templates",
    "build:webpack": "webpack --progress --colors",
    "build": "yarn clean:site && yarn build:cssdev && yarn build:pug && yarn build:webpack && yarn build:images ",
    "lint": "yarn sass:lint && yarn pug:lint",
    "minify": "html-minifier --collapse-boolean-attributes --collapse-whitespace  --html5 --remove-attribute-quotes --remove-comments  --remove-empty-attributes --remove-optional-tags --remove-script-type-attributes  --remove-style-link-type-attributes --remove-tag-whitespace  --sort-attributes --sort-class-name --trim-custom-fragments  --use-short-doctype --minify-js -o dist/index.html dist/index.html",
    "watch:scss": "node-sass --watch --output-style=expanded --indent-type=space --indent-width=2 --source-map=true frontend/styles/app.scss frontend/app.css",
    "watch:pug": "pug --out dist --pretty --watch -b frontend/templates frontend/templates",
    "watch:css": "yarn watch:scss",
    "watch:webpack": "webpack --progress --colors --watch",
    "watch": "yarn build && concurrently -k -p \"[{name}]\" -n \"SERVER,PUG,SCSS,WEBPACK\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgRed.bold\" \"yarn serve \" \"yarn watch:pug \" \"yarn watch:css \" \"yarn watch:webpack \"",
    "prod": "yarn clean:site && yarn build:pug-prod && yarn build:webpack && yarn build:images"
  },
  "repository": "",
  "author": "Eric Irish",
  "devDependencies": {
    "a11y": "^0.5.0",
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "concurrently": "^3.5.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.7.2",
    "path": "^0.12.7",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1",
    "postcss-flexbugs-fixes": "^3.2.0",
    "psi": "^3.0.0",
    "pug-lint": "^2.5.0",
    "pug-lint-config-ctrl": "^1.3.0",
    "sass-lint": "^1.12.1",
    "webpack": "^3.8.1",
    "webpack-stream": "^4.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-stage-3": "^6.24.1",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6"
  }
}
